<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCFC"
    android:windowSoftInputMode="adjustResize"
    tools:context="com.gmlab.team_benew.main.home.firstSetting.FirstSetting1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <EditText
            android:id="@+id/et_firstSetting1_nickname"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/register_edit_text_background"
            android:ems="17"
            android:gravity="start|bottom"
            android:inputType="text"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgb_firstSetting1_photo" />

        <android.widget.ImageButton
            android:id="@+id/imgb_firstSetting1_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/first_setting_picture"
            android:scaleType="centerCrop"
            android:src="@drawable/profilecard_detail_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_firstSetting1_introduce" />

        <ImageView
            android:id="@+id/imgv_firstSetting1_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/first_setting_gallery"
            app:layout_constraintStart_toStartOf="@+id/imgb_firstSetting1_photo"
            app:layout_constraintTop_toTopOf="@+id/imgb_firstSetting1_photo" />

        <TextView
            android:id="@+id/tv_firstSetting1_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:text="*닉네임"
            android:textColor="#B4B4B4"
            app:layout_constraintStart_toStartOf="@+id/et_firstSetting1_nickname"
            app:layout_constraintTop_toTopOf="@+id/et_firstSetting1_nickname" />

        <TextView
            android:id="@+id/tv_firstSetting1_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="안녕하세요\nCollaB입니다."
            android:textColor="#585858"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_firstSetting1_next"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/intro_login_button_background"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_firstSetting1_nickname" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>