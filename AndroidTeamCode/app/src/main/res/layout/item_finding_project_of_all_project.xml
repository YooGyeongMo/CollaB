<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_finding_projects_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/mainBg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_finding_project_title_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로젝트 이름"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/tv_finding_project_list_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인원 수"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_finding_project_title_data"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/tv_finding_project_person_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6명"
                android:textSize="15sp"
                android:textColor="@color/mainFont2"
                app:layout_constraintStart_toEndOf="@id/tv_finding_project_list_person"
                app:layout_constraintTop_toBottomOf="@id/tv_finding_project_title_data"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/tv_finding_project_list_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로젝트 시작 날짜"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@id/tv_finding_project_person_data"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toBottomOf="@id/tv_finding_project_title_data"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tv_finding_project_start_date_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-05-23"
                android:textSize="15sp"
                android:textColor="@color/mainFont2"
                app:layout_constraintStart_toEndOf="@id/tv_finding_project_list_start_date"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/tv_finding_project_list_start_date"
                android:layout_marginTop="1dp"
                />
            <TextView
                android:id="@+id/tv_suggest_to_project_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mainBlue2"
                android:text="참여 요청"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>