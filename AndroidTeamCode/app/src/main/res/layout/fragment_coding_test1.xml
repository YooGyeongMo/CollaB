<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.CodingTest1Fragment">


    <android.widget.Button
        android:id="@+id/btn_codingTest1_next"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="시작"
        android:textColor="#FFFFFF"
        android:background="@drawable/intro_login_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_codingTest1_introduce" />

    <ImageView
        android:id="@+id/imgv_codingTest1_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/new_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_codingTest1_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="코딩테스트에 오신 것을 환영합니다.\nC, C++, JAVA, Python으로 이루어진\n15개의 문항이 준비되어 있습니다.\n시작 하시겠습니까?"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgv_codingTest1_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>