<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_project_info_no_list_card"
        android:layout_width="195dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/mainBg"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_project_no_list_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_make_new_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 프로젝트 만들기"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toBottomOf="@id/tv_make_new_project"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/make_project"
                app:layout_constraintEnd_toStartOf="@id/btn_go_to_make_project"
                />
            <ImageView
                android:id="@+id/btn_go_to_make_project"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/go_to_int_tab"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>