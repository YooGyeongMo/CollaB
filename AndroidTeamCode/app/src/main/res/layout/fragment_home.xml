<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 로딩 인디케이터 추가 -->
        <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:theme="@style/Progressbar_color_under_api21"
            />

        <ImageView
            android:id="@+id/iv_home_greeting_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/greeting_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="안녕하세요!"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_username_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_welcome"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_user_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테스트에 참여해\n전문성을 평가해 보세요."
            app:layout_constraintStart_toStartOf="@id/tv_username_data"
            app:layout_constraintTop_toBottomOf="@id/tv_username_data"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_test_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테스트 하러가기"
            app:layout_constraintTop_toBottomOf="@id/tv_user_introduction"
            app:layout_constraintStart_toStartOf="@id/tv_user_introduction"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/mainBlue2"
            android:layout_marginTop="15dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_skill_test"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_test_guide"
            app:layout_constraintStart_toStartOf="@id/tv_test_guide"
            android:background="@drawable/rounded_btn"
            android:layout_marginTop="10dp"
            android:text="GO!"
            android:textColor="@color/white"
            />

        <!--프로필 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_user_info_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/mainBg"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/btn_skill_test"
            app:strokeWidth="0dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_profile_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/iv_profile_info_pic_border"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/mainBg"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/v_user_profile_vertical_stackbar"
                    >

                    <ImageView
                        android:id="@+id/iv_profile_info_pic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/male_avatar" />

                </FrameLayout>
<!--                <ImageView-->
<!--                    android:id="@+id/iv_profile_info_pic"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="100dp"-->
<!--                    android:src="@drawable/male_avatar"-->
<!--                    android:scaleType="centerCrop"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent" />-->

                <View
                    android:id="@+id/v_user_profile_vertical_stackbar"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/iv_profile_info_pic_border"
                    app:layout_constraintTop_toTopOf="@id/iv_profile_info_pic_border"
                    app:layout_constraintBottom_toBottomOf="@id/iv_profile_info_pic_border"
                    app:layout_constraintEnd_toStartOf="@id/tv_username_data_2"
                    android:background="@color/mainBg4"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_username_data_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@id/v_user_profile_vertical_stackbar"
                    app:layout_constraintTop_toTopOf="@id/iv_profile_info_pic_border"
                    android:layout_marginStart="10dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_profile_role_preview_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_username_data_2"
                    app:layout_constraintStart_toEndOf="@id/v_user_profile_vertical_stackbar"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp">
                    <View
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:background="@drawable/home_profile_role_tag"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tv_home_profile_role_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="normal"
                        android:text="FrontEnd"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_profile_role_preview_container_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_username_data_2"
                    app:layout_constraintStart_toEndOf="@id/home_profile_skill_preview_container"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp">
                    <View
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:background="@drawable/home_profile_role_tag"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tv_home_profile_role_data_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="normal"
                        android:text="DESIGN"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_profile_skill_preview_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/home_profile_role_preview_container"
                    app:layout_constraintStart_toEndOf="@id/v_user_profile_vertical_stackbar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">
                    <View
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:background="@drawable/home_profile_skill_tag"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                    <TextView
                        android:id="@+id/tv_home_profile_skill_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="normal"
                        android:text="JAVA"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_profile_skill_preview_container_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/home_profile_role_preview_container"
                    app:layout_constraintStart_toEndOf="@id/home_profile_skill_preview_container"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">
                    <View
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:background="@drawable/home_profile_skill_tag"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tv_home_profile_skill_data_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="normal"
                        android:text="C++"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_profile_skill_preview_container_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/home_profile_role_preview_container"
                    app:layout_constraintStart_toEndOf="@id/home_profile_skill_preview_container_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">
                    <View
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:background="@drawable/home_profile_skill_tag"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tv_home_profile_skill_data_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="normal"
                        android:text="KOTLIN"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/home_profile_preview_peer_review_weather"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/profilecard_detail_peer60_79"
                    android:layout_margin="5dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
<!--나의 프로젝트 리스트 -->
        <TextView
            android:id="@+id/tv_home_my_main_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="프로젝트"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_user_info_card"
            />

        <TextView
            android:id="@+id/tv_home_my_main_magam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D-Day!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="150dp"
            app:layout_constraintStart_toEndOf="@id/tv_home_my_main_project"
            app:layout_constraintBottom_toTopOf="@id/cv_my_main_project"
            />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_home_project_list_border"
                android:layout_width="195dp"
                android:layout_height="150dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_home_my_main_project"
                app:layout_constraintEnd_toStartOf="@id/cv_my_main_project"
                >
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_home_project_list"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/did_project_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsCornerRadius="10dp"
            app:dotsSize="8sp"
            app:dotsColor="@color/mainFont2"
            app:selectedDotColor="@color/mainBlue2"
            app:layout_constraintTop_toBottomOf="@id/cl_home_project_list_border"
            app:layout_constraintEnd_toEndOf="@id/cl_home_project_list_border"
            app:layout_constraintStart_toStartOf="@id/cl_home_project_list_border"
            android:layout_marginBottom="8dp"
            />
        <!--마감임박 프로젝트 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_my_main_project"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/mainBg"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/tv_home_my_main_project"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeWidth="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main_project_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_home_my_main_project_name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    android:textSize="15dp"
                    android:text="CollaB"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_home_my_main_project_d_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="진행률"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_my_main_project_name_info"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:id="@+id/tv_home_my_main_project_d_day_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70%"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_my_main_project_d_day"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <ProgressBar
                    android:id="@+id/pb_home_main_project_percent_state"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="16dp"
                    android:progress="78"
                    android:max="100"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    android:progressDrawable="@drawable/progress_bar_states"/>
                <ProgressBar
                    android:id="@+id/main_project_loading_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:theme="@style/Progressbar_color_under_api21"
                    />

                <TextView
                    android:id="@+id/no_main_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="12sp"
                    android:text="새로운 프로젝트를\n시작하세요"
                    android:textAlignment="center"
                    android:textColor="@color/mainBlue2"
                    android:visibility="gone"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 광고 배너 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_banner_container"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_home_project_list_border"
        android:layout_marginTop="20dp"
        >

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_home_banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
                android:id="@+id/tv_home_banner_text_indicator_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/tv_home_banner_text_indicator"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textSize="15sp"
                android:textColor="@color/white"
                        />
            <TextView
                android:id="@+id/tv_home_banner_text_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="55dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_home_footer_team_benew_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(주)TeamBenew 사업자정보\n© 2024.TeamBenew Corp.All rights reserved."
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_main_banner_container"
            android:textColor="@color/mainFont2"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>