<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_chat_list_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트 이름"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:id="@+id/popup_chat_list_out"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/btn_more_option"
        android:contentDescription="More option"
        app:layout_constraintStart_toEndOf="@id/tv_chat_list_item_user_name"
        app:layout_constraintTop_toTopOf="@id/tv_chat_list_item_user_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_chat_list_item_user_name"
        android:layout_marginStart="5dp"
        />

    <ImageView
        android:id="@+id/btn_add_freinds_this_chat_room"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/add_chat_list_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"

        />




</androidx.constraintlayout.widget.ConstraintLayout>