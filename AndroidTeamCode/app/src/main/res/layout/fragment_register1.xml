<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCFC"
    android:windowSoftInputMode="adjustResize"
    tools:context="com.gmlab.team_benew.auth.register.screens.Register1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/tv_firstRegister_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:text="회원가입"
            android:textColor="#585858"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_firstRegister_name"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/register_edit_text_background"
            android:ems="17"
            android:gravity="start|bottom"
            android:inputType="text"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_firstRegister_title" />

        <EditText
            android:id="@+id/et_firstRegister_id"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/register_edit_text_background"
            android:ems="17"
            android:gravity="start|bottom"
            android:inputType="text"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_firstRegister_name" />

        <EditText
            android:id="@+id/et_firstRegister_password"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/register_edit_text_background"
            android:ems="17"
            android:gravity="start|bottom"
            android:inputType="textPassword"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_firstRegister_id" />

        <EditText
            android:id="@+id/et_firstRegister_passwordCheck"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/register_edit_text_background"
            android:ems="17"
            android:gravity="start|bottom"
            android:inputType="textPassword"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_firstRegister_password" />

        <TextView
            android:id="@+id/tv_firstRegister_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:text="이름"
            android:textColor="#B4B4B4"
            app:layout_constraintStart_toStartOf="@+id/et_firstRegister_name"
            app:layout_constraintTop_toTopOf="@+id/et_firstRegister_name" />

        <TextView
            android:id="@+id/tv_firstRegister_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:text="아이디"
            android:textColor="#B4B4B4"
            app:layout_constraintStart_toStartOf="@+id/et_firstRegister_id"
            app:layout_constraintTop_toTopOf="@+id/et_firstRegister_id" />

        <TextView
            android:id="@+id/tv_firstRegister_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:text="비밀번호"
            android:textColor="#B4B4B4"
            app:layout_constraintStart_toStartOf="@+id/et_firstRegister_password"
            app:layout_constraintTop_toTopOf="@+id/et_firstRegister_password" />

        <TextView
            android:id="@+id/tv_firstRegister_passwordCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:text="비밀번호 확인"
            android:textColor="#B4B4B4"
            app:layout_constraintStart_toStartOf="@+id/et_firstRegister_passwordCheck"
            app:layout_constraintTop_toTopOf="@+id/et_firstRegister_passwordCheck" />

        <android.widget.Button
            android:id="@+id/btn_firstRegister_next"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/intro_login_button_background"
            android:text="확인"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/et_firstRegister_passwordCheck"
            app:layout_constraintStart_toStartOf="@+id/et_firstRegister_passwordCheck"
            app:layout_constraintTop_toBottomOf="@+id/et_firstRegister_passwordCheck" />

        <android.widget.Button
            android:id="@+id/btn_firstRegister_idCheck"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/intro_login_button_background"
            android:text="중복체크"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/et_firstRegister_id"
            app:layout_constraintEnd_toEndOf="@+id/et_firstRegister_id"
            app:layout_constraintTop_toTopOf="@+id/et_firstRegister_id" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>