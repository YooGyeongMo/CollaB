<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_welcome_testing_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="테스트"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_testing_intro"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="25dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gbtn_java"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/button_bg"
            android:text="자바"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gbtn_python"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:elevation="5dp"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gbtn_python"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/button_bg"
            android:text="파이썬"
            app:layout_constraintStart_toEndOf="@id/gbtn_java"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:elevation="5dp"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gbtn_cpp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/button_bg"
            android:text="C++"
            app:layout_constraintTop_toBottomOf="@id/gbtn_java"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gbtn_csharp"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:elevation="5dp"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gbtn_csharp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/button_bg"
            android:text="C#"
            app:layout_constraintTop_toBottomOf="@id/gbtn_python"
            app:layout_constraintStart_toEndOf="@id/gbtn_cpp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:elevation="5dp"
            android:textColor="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>